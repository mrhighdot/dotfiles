# ğŸ“¦ Move focused window to space with lctrl+Shift+[1-5]
lctrl + shift - 1 : yabai -m window --space 1
lctrl + shift - 2 : yabai -m window --space 2
lctrl + shift - 3 : yabai -m window --space 3
lctrl + shift - 4 : yabai -m window --space 4
lctrl + shift - 5 : yabai -m window --space 5

# â¬†â¬‡â¬…â¡ Focus window in direction
lctrl - h : yabai -m window --focus west
lctrl - l : yabai -m window --focus east
lctrl - j : yabai -m window --focus south
lctrl - k : yabai -m window --focus north

# ğŸ” Rotate layout
lctrl + alt - r : yabai -m space --rotate 90

# â†• Toggle float
lctrl - t : yabai -m window --toggle float

# ğŸ–¼ï¸ Toggle fullscreen
