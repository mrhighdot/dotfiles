# 🧭 Switch to spaces with lctrl + [1-5]
lctrl - 1 : yabai -m space --focus 1; sketchybar --trigger space_change
lctrl - 2 : yabai -m space --focus 2; sketchybar --trigger space_change
lctrl - 3 : yabai -m space --focus 3; sketchybar --trigger space_change
lctrl - 4 : yabai -m space --focus 4; sketchybar --trigger space_change
lctrl - 5 : yabai -m space --focus 5; sketchybar --trigger space_change
lctrl - 6 : yabai -m space --focus 1; sketchybar --trigger space_change
lctrl - 7 : yabai -m space --focus 2; sketchybar --trigger space_change
lctrl - 8 : yabai -m space --focus 3; sketchybar --trigger space_change
lctrl - 9 : yabai -m space --focus 4; sketchybar --trigger space_change
lctrl - 0 : yabai -m space --focus 5; sketchybar --trigger space_change


# 📦 Move focused window to space with lctrl+Shift+[1-5]
lctrl + shift - 1 : yabai -m window --space 1
lctrl + shift - 2 : yabai -m window --space 2
lctrl + shift - 3 : yabai -m window --space 3
lctrl + shift - 4 : yabai -m window --space 4
lctrl + shift - 5 : yabai -m window --space 5

# ⬆⬇⬅➡ Focus window in direction
lctrl - h : yabai -m window --focus west
lctrl - l : yabai -m window --focus east
lctrl - j : yabai -m window --focus south
lctrl - k : yabai -m window --focus north

# 🔁 Rotate layout
lctrl + alt - r : yabai -m space --rotate 90

# ↕ Toggle float
lctrl - t : yabai -m window --toggle float

# 🖼️ Toggle fullscreen
lctrl - f : yabai -m window --toggle zoom-fullscreen

# 🧭 Mirror window vertically
lctrl - m : yabai -m window --mirror vertical

